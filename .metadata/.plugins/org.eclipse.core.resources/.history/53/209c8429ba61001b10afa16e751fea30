package com.ticket.client;

import java.util.Optional;

import org.springframework.cloud.openfeign.FeignClient;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PathVariable;


import com.commons.entity.Detalles;
@FeignClient(contextId = "detallesContextID", value = "detallesValue", url = "http://servicio-detalles/", configuration = BarConfig.class)
public interface DetalleClient {
	
	@GetMapping("/findById/{id}")
	public Optional<Detalles> findById(@PathVariable (name = "id") Long id);

}
