package com.ticket.repository;

import java.util.List;

import org.springframework.data.jpa.repository.Query;
import org.springframework.data.repository.PagingAndSortingRepository;
import org.springframework.data.repository.query.Param;
import org.springframework.data.rest.core.annotation.RepositoryRestResource;
import org.springframework.data.rest.core.annotation.RestResource;
import org.springframework.web.bind.annotation.RequestBody;

import com.commons.entity.Ticket;
import com.commons.entity.Usuario;
@RepositoryRestResource(path = "ticket")
public interface TicketRepository extends PagingAndSortingRepository<Ticket, Long> {
	
	@RestResource(path = "buscar-username")
	@Query(value = "select *  from Ticket u where u.usuario =1",nativeQuery = true)
	public Ticket dwight(@Param ("usuario") String usuario);
}

